{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "dev:init": {
      "cache": false
    }
  },
  "globalEnv": [
    "PORT",
    "DATABASE_URL",
    "NODE_ENV",
    "SHOW_ADMIN_PLAYGROUND",
    "AUTO_SCHEMA_FILE",
    "GENERATE_SCHEMA_FILES"
  ]
}
